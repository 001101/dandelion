require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('git-deploy', '0.0.1') do |p|
  p.description = "A Ruby gem for Git repository deployment via SFTP."
  p.url = "http://github.com/scottbnel/git-deploy"
  p.author = "Scott Nelson"
  p.email = "scottbnel@gmail.com"
  p.runtime_dependencies = ["net-sftp", "grit"]
end